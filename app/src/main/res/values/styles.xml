<resources>

    <!--
    adding the style attributes  here for two mean reasons
     1: all the attributes will be initialized at compile time for better performance
     2: THE MVC Pattern
    -->


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--attributes which will set the text view style -->
    <style name="font_p1" parent="@android:style/TextAppearance.Medium">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="font_p2" parent="@android:style/TextAppearance.Medium">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22dp</item>
    </style>


    <style name="font_p3" parent="@android:style/TextAppearance.Medium">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>


    <!--attributes which will set the text input custom look-->
    <style name="edit_text_input" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--attributes which will set the Button custom look-->
    <style name="button_general" parent="Widget.AppCompat.ActionButton">
        <item name="android:textSize">22sp</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">22sp</item>
    </style>


</resources>
